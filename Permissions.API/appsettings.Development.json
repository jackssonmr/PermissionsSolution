{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "PermissionContext": "Persist Security Info=False;Encrypt=false;User ID=sa;Password=Dell1#admin;Initial Catalog=PermissionsDB;Server=sqlsvr-dev"
  },
  "Elasticsearch": {
    "Url": "http://elasticsearch-dev:9200",
    "DefaultIndex": "permissions-index"
  },
  "Kafka": {
    "BootstrapServers": "kafka-dev:9092",
    "TopicName": "permission-events"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "/logs/log-development-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "Properties": {
      "Application": "Permission API",
      "Environment": "Development"
    }
  }
}
